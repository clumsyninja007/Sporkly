<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aharm.sporkly">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyIngredientsActivity" android:label="@string/myIngredientLabel"></activity>
        <activity android:name=".PantryActivity" android:label="@string/myPantryLabel"></activity>
        <activity android:name=".ShoppingListActivity" android:label="@string/myShoppingListLabel"></activity>
        <activity android:name=".RecipeSearchActivity" android:label="@string/recipeSearchButton"></activity>
        <activity android:name=".RecipeViewActivity" android:label="@string/recipeViewLabel"></activity>
        <activity android:name=".FavoritesActivity" android:label="@string/favoritesLabel"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>